<%= form_for(@project) do |f| %>
    <ul>
    <% @project.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.label :title %><br />
      <%= f.text_area :title %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>